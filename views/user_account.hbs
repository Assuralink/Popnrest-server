{{> Menu }}

<div class="bloc content">

    {{> user_welcoming }}

    {{> user_submenu }}
    <script>
        $(".sub_menu a[href='/users/account']").addClass("active");
    </script>

    <article id="Account_details">

        <h1>Account settings</h1>

        <div class="bloc Form _content Form_account_details">
            
            <div class="_form bloc untoogle Form_firstname">
                <input type="text" placeholder="Firstname" />
                <span></span>
                <button class="edit_field">
                    Edit firstname
                </button>
                <button class="action">
                    Update
                </button>
                <button class="cancel">
                    Cancel
                </button>
            </div>

            <div class="_form bloc untoogle Form_lastname">
                <input type="text" placeholder="Lastname" />
                <span></span>
                <button class="edit_field">
                    Edit lastname
                </button>
                <button class="action">
                    Update
                </button>
                <button class="cancel">
                    Cancel
                </button>
            </div>

            <div class="_form bloc untoogle Form_email">
                <input type="text" placeholder="Email" />
                <span></span>
                <button class="edit_field">
                    Edit email
                </button>
                <button class="action">
                    Update
                </button>
                <button class="cancel">
                    Cancel
                </button>
            </div>

            <div class="_form bloc untoogle Form_phoneNumber">
                <input type="text" placeholder="Phone Number" />
                <span></span>
                <button class="edit_field">
                    Edit phone number
                </button>
                <button class="action">
                    Update
                </button>
                <button class="cancel">
                    Cancel
                </button>
            </div>
            
        </div>
    </article>

</div>

